{
  "name": "@kant/merge-remote-graphql-schemas",
  "version": "0.1.20",
  "description": "Merge GraphQL remote executable schemas using directive hints",
  "keywords": [
    "graphql",
    "javascript"
  ],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk node_modules/.bin/jest --runInBand"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/StephenCodesThings/merge-remote-graphql-schemas.git"
  },
  "author": "Stephen Bennett <stmbenn@gmail.com> (https://twitter.com/StephenSaysThis)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/StephenCodesThings/merge-remote-graphql-schemas/issues"
  },
  "homepage": "https://github.com/StephenCodesThings/merge-remote-graphql-schemas#readme",
  "dependencies": {
    "graphql": "^14.0.2",
    "graphql-tools": "^4.0.3",
    "lodash": "^4.17.11"
  },
  "devDependencies": {
    "@types/graphql": "^14.0.3",
    "@types/jest": "^23.3.12",
    "@types/lodash": "^4.14.119",
    "@types/node": "^10.12.18",
    "graphql-tag": "^2.10.0",
    "jest": "^23.6.0",
    "prettier": "^1.15.3",
    "ts-jest": "^23.10.5",
    "tslint": "^5.11.0",
    "typescript": "^3.1.6"
  }
}
